{
  "manifest_version": 2,
  "name": "Meet me There",
  "description": "Book Flights based on your viewing content",
  "version": "1.0",
  "background": {
        "scripts": ["background.js"],
        "persistent": false
   },
   "browser_action": {
        "default_icon": "icon.png"
    },
  "content_scripts": [
  {
  	"matches": [
  		"<all_urls>"
    ],
    "js": ["content.js"]
  }
  ]
}